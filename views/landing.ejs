<div class="page-section">
	<div class="wrapper">
		<h2 class="page-section__title"><i class="fas fa-circle"></i>Special Offers</h2>
		<p class="page-section__subtitle">Best 2020 places where people love to stay!</p>
		
		<div class="grid">
			<% bestSpots.forEach(function(bestSpot){ %>
			<div class="grid__tile">
				<img class="grid__tile__image" src="<%= bestSpot.thumbnail %>">
				
				<div class="grid__tile__container">
					<div class="grid__tile__title-box">
						<h3 class="grid__tile__title"><%= bestSpot.name %></h3>
						<div class="grid__tile__rating">
							<%= (Math.round(bestSpot.rating * 100) / 100).toFixed(1) %>
							<% for(i = 0; i<bestSpot.rating; i++){ %>
								<i class="fas fa-star"></i>
							<% } %>	
						</div>
					</div>
					
					<div class="grid__tile__description-box">
						<div class="grid__tile__description">
							<h4 class="grid__tile__description__subtitle"><%= bestSpot.station%></h4>
							<p class="grid__tile__description__details"><%= bestSpot.type%> - <%= bestSpot.guests%> Guests - <%= bestSpot.bedrooms%> Bedrooms</p>
						</div>
						<div class="grid__tile__price-box">
							<h3 class="grid__tile__price-box__price">$<%= bestSpot.price%></h3>
							<p>per night</p>
						</div>
					</div>
				</div>
			</div>
			<% }); %>
		</div>
	</div>
</div>

