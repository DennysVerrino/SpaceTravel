<div id="special-offers" class="page-section page-section--lightBG" data-matching-link="#special-offers-link">
	<div class="wrapper">
		<h2 class="page-section__title"><i class="fas fa-circle"></i>Special Offers</h2>
		<p class="page-section__subtitle">Best 2020 places where people love to stay!</p>
		
		<div class="grid">
			<% bestSpots.forEach(function(bestSpot){ %>
			<div class="grid__tile--3-col-atL">
				<div class="card card--borderR">
					<div class="card__image-box">
						<img src="<%= bestSpot.thumbnail %>">
					</div>
					<div class="card__info-box">
						<div class="card__info-box__details">
							<a class=" btn btn--turquoise" href="/vacationSpots/<%= bestSpot._id %>">Details</a>
						</div>
						<div class="card__info-box__title-box">
							<h3 class="card__info-box__title"><%= bestSpot.station %></h3>
							<h3 class="card__info-box__price">$ <%= bestSpot.price %><span> / night</span></h3>
						</div>
						<h4 class="card__info-box__subtitle"><%= bestSpot.name%></h4>
						<p class="card__info-box__description"><%= bestSpot.type%> - <%= bestSpot.guests%> Guests - <%= bestSpot.bedrooms%> Bedrooms</p>
						<div class="card__info-box__rating">
							
							<% if(bestSpot.rating == 0){ %>
								<%= "not rated yet" %>
							<% } else { %>
								<%= (Math.round(bestSpot.rating * 100) / 100).toFixed(1) %>
								<% for(i = 0; i<bestSpot.rating; i++){ %>
									<i class="fas fa-star"></i>
								<% } %>	
							<% } %>	
						</div>
						<% if(currentUser && currentUser._id == "5f28282255ed3a3348eab4d9"){ %>
							<a href="/vacationSpots/<%= bestSpot._id %>/edit" class="btn btn--turquoise btn--small">Edit</a>
							<form class="form--inline" action="/vacationSpots/<%= bestSpot._id %>?_method=DELETE" method="POST">
								<button class="btn btn--small btn--orange">Delete</button>
							</form>
						<% } %>
					</div>	
				</div>
			</div>
			<% }); %>
		</div>
	</div>
</div>

